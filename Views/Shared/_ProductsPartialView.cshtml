@model PartialViewAspNetCore.Models.Product
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@(Model.Image)" width="100" asp-append-version="true" class="img-fluid rounded" alt="Product Image">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">$ @Model.Price</small></p>
                <a href="#" class="btn btn-primary">View Product</a>
            </div>
        </div>
    </div>
</div>